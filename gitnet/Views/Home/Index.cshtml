@model gitnet.Models.Producto
@{
    ViewBag.Title = "Index";
}

<h2>Registro de un Producto</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="form-group">
            <label>Nombre</label>
            @Html.TextBoxFor(m => m.nombre, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Descripción</label>
            @Html.TextBoxFor(m => m.descripcion, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Precio</label>
            @Html.TextBoxFor(m => m.precio, htmlAttributes: new { @class = "form-control"})
        </div>
        <div class="form-group">
            <a href="#" class="btn btn-primary" role="button">Registrar</a>
            <!--<button type="button" class="btn btn-primary">Registrar</button>-->
            <button type="button" class="btn btn-danger">Cancelar</button>
        </div>
    </div>
}

