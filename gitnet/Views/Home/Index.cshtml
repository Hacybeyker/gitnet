@model gitnet.Models.Producto
@{
    ViewBag.Title = "Index";
}

<h2>Registro de un Producto</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="form-group">
            @Html.LabelFor(model => model.nombre)
            @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.descripcion)
            @Html.TextBoxFor(model => model.descripcion, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.precio)
            @Html.TextBoxFor(model => model.precio, htmlAttributes: new { @class = "form-control"})
        </div>
        <div class="form-group">
            <a href="#" class="btn btn-primary" role="button">Registrar</a>
            <!--<button type="button" class="btn btn-primary">Registrar</button>-->
            <button type="button" class="btn btn-danger">Cancelar</button>
        </div>
    </div>
}

